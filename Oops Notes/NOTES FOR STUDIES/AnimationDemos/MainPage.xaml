<UserControl x:Class="AnimationDemos.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.Resources>
            <Storyboard x:Name="mystoryboard">
                <ColorAnimation Storyboard.TargetName="mycolor" Storyboard.TargetProperty="Color" From="Blue" Duration="0:0:5" x:Name="myColorAnimation" />
            </Storyboard>
        </Grid.Resources>
        <Ellipse Height="167" HorizontalAlignment="Left" Margin="90,27,0,0" Name="MyEllipse" Stroke="Black" StrokeThickness="1" VerticalAlignment="Top" Width="226" >
            <Ellipse.Fill>
                <SolidColorBrush Color="Blue" x:Name="mycolor" />
            </Ellipse.Fill>
        </Ellipse>        
        <Button Content="Start Animation" Height="67" HorizontalAlignment="Left" Margin="30,211,0,0" Name="button1" VerticalAlignment="Top" Width="148" FontWeight="Bold" FontSize="14" Click="button1_Click" />
        <Button Content="Stop Animation" Height="67" HorizontalAlignment="Left" Margin="244,209,0,0" Name="button2" VerticalAlignment="Top" Width="136" FontSize="14" FontWeight="Bold" Click="button2_Click" />
    </Grid>
</UserControl>
