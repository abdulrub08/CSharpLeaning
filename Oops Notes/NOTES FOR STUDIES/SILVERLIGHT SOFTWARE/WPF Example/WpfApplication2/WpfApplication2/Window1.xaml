<Window x:Class="WpfApplication2.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="315" Width="447">
    <Canvas Height="273" Width="415">
        <Ellipse Width="75" Height="75" Stroke="Magenta" StrokeThickness="2">
            <Ellipse.Fill>
                <SolidColorBrush Color="GreenYellow"/>
            </Ellipse.Fill>

        </Ellipse>
        <Ellipse Stroke="Blue" StrokeThickness="5"
                 Width="100" Height="100" Canvas.Left="100" Canvas.Top="10">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Offset=".2" Color="White"/>
                    <GradientStop Offset=".5" Color="Red"/>
                    <GradientStop Offset=".7" Color="Yellow"/>
                    <GradientStop Offset=".9" Color="Green"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Button Canvas.Left="161" Canvas.Top="157" Height="23" Name="button1" Width="75" Click="button1_Click">Button</Button>
    </Canvas>
</Window>
