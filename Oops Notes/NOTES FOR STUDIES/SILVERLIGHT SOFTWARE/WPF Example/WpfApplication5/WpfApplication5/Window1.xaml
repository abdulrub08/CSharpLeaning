<Window x:Class="WpfApplication5.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="300" Width="300">
    <Canvas>
        <Line Stroke="Red" StrokeThickness="5" X1="10" Y1="10" X2="100" Y2="10" x:Name="abc">
            <Line.Triggers>
                <EventTrigger RoutedEvent="canvas.load">
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="abc" Storyboard.TargetProperty="(Canvas.Top)" From="0" To="800" AutoReverse="True" RepeatBehavior="Forever" Duration="00:00:05"/>

                    </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Line.Triggers>
        </Line>
    </Canvas>
</Window>
